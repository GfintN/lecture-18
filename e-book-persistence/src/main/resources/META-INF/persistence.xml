<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="postgresql.e-book-shop" transaction-type="RESOURCE_LOCAL">
        <provider>com.zaxxer.hikari.hibernate.HikariConnectionProvider</provider>
        <class>by.it.academy.example.entity.postgresql.BookAndAuthor</class>
        <class>by.it.academy.example.entity.postgresql.BookBuyTransaction</class>
        <class>by.it.academy.example.entity.postgresql.BookPublicationRequest</class>
        <class>by.it.academy.example.entity.postgresql.RequestsForAuthorStatus</class>
        <class>by.it.academy.example.entity.postgresql.ReviewerInfo</class>
        <class>by.it.academy.example.entity.postgresql.SubAdminDeleteRequests</class>
        <class>by.it.academy.example.entity.postgresql.SubAdminInfo</class>
        <class>by.it.academy.example.entity.postgresql.UsersDataChangeTransaction</class>
        <properties>
            <property name="hibernate.hikari.dataSourceClassName" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.hikari.maximumPoolSize" value="500"/>
            <property name="hibernate.hikari.minimumIdle" value="100"/>
            <property name="hibernate.hikari.connectionTimeout" value="20000"/>
            <property name="hibernate.hikari.dataSource.url" value="jdbc:postgresql://localhost:5432/e-book"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="mongodb.e-book-users" transaction-type="RESOURCE_LOCAL">
        <provider>com.zaxxer.hikari.hibernate.HikariConnectionProvider</provider>
        <class>by.it.academy.example.entity.mongodb.Status</class>
        <class>by.it.academy.example.entity.mongodb.AuthorActivities</class>
        <class>by.it.academy.example.entity.mongodb.Books</class>
        <class>by.it.academy.example.entity.mongodb.UserInfo</class>
        <class>by.it.academy.example.entity.mongodb.Users</class>
        <class>by.it.academy.example.entity.mongodb.WishList</class>
        <class>by.it.academy.example.entity.mongodb.UserBuying</class>
        <properties>
            <property name="hibernate.hikari.dataSourceClassName" value="mongodb.jdbc.MongoDriver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.hikari.maximumPoolSize" value="5000"/>
            <property name="hibernate.hikari.minimumIdle" value="100"/>
            <property name="hibernate.hikari.connectionTimeout" value="20000"/>
            <property name="hibernate.hikari.dataSource.url" value="jdbc:mongo://localhost:27017/e-book"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="lecture18" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>by.it.academy.example.entity.lecture.Book</class>
        <class>by.it.academy.example.entity.lecture.Review</class>
        <class>by.it.academy.example.entity.lecture.BookAndReview</class>
        <class>by.it.academy.example.entity.lecture.ConstantRating</class>
        <class>by.it.academy.example.entity.lecture.RandomGenerate</class>
        <class>by.it.academy.example.entity.lecture.Rating</class>
        <class>by.it.academy.example.entity.lecture.TestConstantRating</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/animals?createdDatabaseIfNotExist=true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.pool_size" value="10"/>
        </properties>
    </persistence-unit>
</persistence>